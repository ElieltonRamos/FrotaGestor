{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Gestor de Frota",
  "version": "0.1.0",
  "identifier": "com.frota-gestor.app",
  "build": {
    "frontendDist": "../dist/frontend/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Gestor de Frota Rede Norte",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
